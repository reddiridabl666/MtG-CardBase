<div class="col-4">
  <%= form_with(model: user) do |form| %>
    <% if user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, t('user_name'), style: "display: block", class: "form-label" %>
      <%= form.text_field :name, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :password, t('password'), style: "display: block", class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, t('pass_repeat'), class: "form-label", style: "display: block" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>

    <% if current_user&.is_admin %>
      <div class="form-group">
        <%= form.label :is_admin, style: "display: block" %>
        <%= form.check_box :is_admin, class: "form-checkbox" %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= form.submit t('submit'), class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>