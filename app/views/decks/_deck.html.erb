<%= form_with url: save_deck_path, class: 'align-items-center mt-2' do |form| %>
  <div class="row align-items-center">
    <%= form.label :deck_name, 'Name', class: 'col-2 h5', value: deck.name %>
    <div class="col-5">
      <%= form.text_field :deck_name, class: 'form-control', required: true %>
    </div>

    <div class="col-5">
      <%= form.collection_select :deck_format, Format.all, :id, :name, selected: deck.format.id, class: 'form-select large-font ms-3 p-2' %>
    </div>
  </div>

  <% unless deck.cards.empty? %>
    <div class="row list-group list-group-horizontal outline small mt-3">
      <div class="col-4 list-group-item centered p-1">
        <span>Name</span>
      </div>
      <div class="col-3 list-group-item centered p-1">
        <span>Type</span>
      </div>
      <div class="col-2 list-group-item centered p-1">
        <span>Manacost</span>
      </div>
      <div class="col-2 list-group-item centered p-1">
        <span>Expansion</span>
      </div>
      <div class="col-1 list-group-item centered p-1 pe-2 ps-2">
        <span>Count</span>
      </div>
    </div>
  <% end %>

  <% deck.cards.each do |card| %>
    <%= render card %>
  <% end %>

  <div class="row mt-3 justify-content-center">
    <button class="col-3 btn btn-outline-success" type='submit'>Save</button>
    <button class="col-3 btn btn-outline-danger ms-2" type='submit'>Delete</button>
  </div>
<% end %>
