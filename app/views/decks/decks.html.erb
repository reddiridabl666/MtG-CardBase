<% if @decks.present? %>
  <div class="row mt-5">
    <div class="list-group row col-6 list-group-horizontal outline ms-1 pe-0">
      <div class="col-4 list-group-item centered">
        <span><%= t('name') %></span>
      </div>
      <div class="col-3 list-group-item centered">
        <span><%= t('author') %></span>
      </div>
      <div class="col-2 list-group-item centered">
        <span><%= t('colors') %></span>
      </div>
      <div class="col-3 list-group-item centered">
        <span><%= t('format') %></span>
      </div>
    </div>
  </div>
<% else %>
  <div class="row mt-5">
    <div class="h4 col-4">
      <%= t('no-decks') %>
    </div>
    <%= link_to t('back'), 'javascript:history.back()', class: 'btn btn-outline-primary col-1' %>
  </div>
<% end %>

<% @decks.each do |deck| %>
  <%= render partial: 'decks/deck_entry', locals: { deck: deck } %>
<% end %>

<%= render partial: "footer_pagination", locals: { objects: @decks } %>
