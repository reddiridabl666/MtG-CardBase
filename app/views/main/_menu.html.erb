
<div class="row justify-content-center">
  <button class="col-6 btn btn-outline-primary text-dark" id='filter-btn'>Filters</button>
</div>

<%= form_with url: filtered_path, method: :get, class: "mt-3 hidden #{'shown' if @show_filters}", id: 'filter-form' do |form| %>
  <div class="row form-group">
    <%= form.label :name, 'Name', class: "col-3"%>
    <div class="col-9">
      <%= form.text_field :name, class: "form-control", value: @params[:name] %>
    </div>
  </div>
  <div class="row mt-2 form-group">
    <%= form.label :rules, 'Rules Text', class: "col-3"%>
    <div class="col-9">
      <%= form.text_field :rules, class: "form-control", value: @params[:rules] %>
    </div>
  </div>
  <div class="row mt-2 form-group">
    <%= form.label :flavour, 'Flavour Text', class: "col-3"%>
    <div class="col-9">
      <%= form.text_field :flavour, class: "form-control", value: @params[:flavour] %>
    </div>
  </div>

  <div class="ms-2 gx-4 row mt-2 form-group align-items-center justify-content-center">
    <%= form.label :set, 'Expansion', class: 'col-3' %>
    <div class="col-6">
      <%= form.select :set, @expansions, class: "ms-2 form-select", selected: @params[:set] %>
    </div>
  </div>

  <div class="row gx-5 mt-3 justify-content-center">
    <% %w[w u b r g c].each do |color| %>
      <%= render partial: 'symbol_checkbox', locals: { form: form, color: color } %>
    <% end %>
  </div>

  <div class="row form-group mt-3 justify-content-center">
    <%= form.label :supertypes, 'Supertype', class: 'col-3' %>
    <div class="col-5">
      <%= form.select :supertypes, @supertypes, class: "ms-1 form-select", selected: @params[:supertypes] %>
    </div>
  </div>

  <div class="row form-group mt-2 justify-content-center">
    <%= form.label :types, 'Type', class: 'col-3' %>
    <div class="col-5">
      <%= form.select :types, @types, class: "ms-1 form-select", selected: @params[:types] %>
    </div>
  </div>

  <div class="row form-group mt-2 justify-content-center">
    <%= form.label :subtypes, 'Subtype', class: 'col-3' %>
    <div class="col-5">
      <%= form.select :subtypes, @subtypes, class: "ms-1 form-select", selected: @params[:subtypes] %>
    </div>
  </div>

  <div class="row form-group mt-2 justify-content-center">
    <%= form.number_field :cost_ge, in: 0..99, class: 'col-1 p-0 ps-1', value: @params[:cost_ge] %>
    <span class="text-dark col-5 pe-0 text-center"><= Mana value <=</span>
    <%= form.number_field :cost_le, in: 0..99,  class: 'col-1 p-0 ps-1 ms-1', value: @params[:cost_le]  %>
  </div>

  <div class="row form-group mt-2 justify-content-center">
    <%= form.number_field :power_ge, in: 0..99, class: 'col-1 p-0 ps-1', value: @params[:power_ge] %>
    <span class="text-dark col-5 text-center"><= Power <=</span>
    <%= form.number_field :power_le, in: 0..99, class: 'col-1 p-0 ps-1 ms-1', value: @params[:power_le]  %>
  </div>

  <div class="row form-group mt-2 justify-content-center">
    <%= form.number_field :toughness_ge, in: 0..99, class: 'col-1 p-0 ps-1', value: @params[:toughness_ge] %>
    <span class="text-dark col-5 pe-0 text-center"><= Toughness <=</span>
    <%= form.number_field :toughness_le, in: 0..99, class: 'col-1 p-0 ps-1 ms-1', value: @params[:toughness_le]  %>
  </div>

  <div class="row mt-4">
    <div class="col-3"></div>
    <%= form.submit "Search", class: "btn btn-secondary col-6" %>
    <div class="col-3"></div>
  </div>
<% end %>
