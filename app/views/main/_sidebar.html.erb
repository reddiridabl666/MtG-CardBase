<% @deck ||= nil %>

<div class="col-4 mt-5 ms-0 pe-4 d-flex flex-column">
  <div class="menu position-fixed p-3 max-100-vh overflow-visible">
    <div class="text-center">
      <%= render partial: 'flash', locals: { types: %w[error alert] } %>
    </div>

    <%= render partial: 'menu' %>

    <div id="deck" class="mt-4 row small">
      <%= render partial: 'decks/deck_editor', locals: {deck: @deck} unless @deck.blank? %>
    </div>
  </div>
</div>
