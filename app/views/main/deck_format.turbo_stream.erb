<%= turbo_stream.replace "deck" do %>
  <div id="deck" class="mt-5 row">
    <h4>New Deck</h4>
    <%= form_with url: create_deck_path, method: :post, id: 'deck-create-form', class: 'col-12' do |form| %>

      <div class="form-group row mb-2">
        <%= form.label :deck_name, 'Name:', class: 'form-label col-4 pe-0 medium-font' %>
        <div class="col-4">
          <%= form.text_field :deck_name, class: 'form-control form-control-sm', required: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :deck_format, 'Choose format:', class: 'form-label col-4 pe-0 medium-font' %>
        <div class="col-2">
          <%= form.collection_select :deck_format, Format.all, :id, :name, class: 'form-select large-font col-2' %>
        </div>
      </div>

      <div class="">
        <button class="btn btn-primary" id='create-deck-btn'>Create</button>
      </div>
    <% end %>

    <script>
        document.getElementById('deck-create-form').addEventListener('submit', () => {
            for (let obj of document.getElementsByClassName('dropdown-btn-container')) {
                obj.classList.add('d-none')
            }

            for (let obj of document.getElementsByClassName('card-buttons')) {
                obj.classList.remove('d-none');
            }
        });
    </script>
  </div>
<% end %>
