<h3 class="mt-5 mb-3 position-relative"><%= t('log_in') %></h3>

<div class="col-4">
  <% flash.each do |_, msg| %>
    <p class="text-danger"><%= msg %></p>
  <% end %>

  <%= form_with url: authorize_path do |form| %>
    <div class="form-group">
      <%= form.label :name, t('user_name'), style: "display: block", class: "form-label" %>
      <%= form.text_field :name, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :password, t('password'), style: "display: block", class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= form.submit t('submit'),  class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>